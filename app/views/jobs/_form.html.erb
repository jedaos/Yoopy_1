<div class="container">


<%= form_with model: @job, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :rate %>
    <%= f.text_field :rate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
