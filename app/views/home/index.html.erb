<div class="hide-on-med-and-down">
  <div id="homepage1">
    <div class="homewrapper">

      <!-- Log In Modal With Tabs -->
      <div id="modal4" class="modal">
        <div class="modal-content">
          <%= render 'new_session' %>
        </div>
      </div>

      <!-- Sign Up Modal With Tabs -->
      <div id="modal6" class="modal">
        <div class="modal-content">
          <%= render 'new_registration' %>
        </div>
      </div>

      <!-- Home Page Headline & Subheadline -->
      <div class="headline-box">
        <h1 id="headline">Nurse Concierge.<br>Simple.</h1>
        <p id="sub-headline">Yoopy connects you with healthcare professionals quickly.</p>
        <div class="row">
          <div id="cta-button">
            <a class="modal-trigger btn-large green-button" href="#modal6" id="signup-button">Sign Up</a>
          </div>

        </div>
      </div>

    </div>
  </div>

  <div class="home-container">
    <div class="content">
      <div id="homepage2">
        <!-- About Us Row -->
        <div class="row" id="about-us">
          <div class="col s12">
            <h3>About Yoopy Health</h3>
            <div class="underline"></div>
            <p class="subtext">Yoopy provides healthcare professionals & healthcare facilities with more flexibility than any other service in the industry. <br>During emergencies, Yoopy connects you with the professionals.</p>
          </div>


          <div class="col s4">
            <%= scroll_reveal(animation: "enter left, after 0.15s", id: "icons" ) do %>
              <%= link_to image_tag('stethoscope.png', :size => "150x150"), new_prof_registration_path %>
              <h5>Professionals</h5>
              <p class="subtext">Yoopy provides you with more flexibility than any other service in the nursing industry. Yoopy does this by letting you decide how valuable your time is, what you enjoy doing, and what you agree to.</p>
            <% end %>
          </div>


        <div class="col s4">
          <%= scroll_reveal(animation: "enter left, after 0.25s" ) do %>
            <%= link_to image_tag('medicine.png', :size => "150x150", id: "medicine"), new_hospital_registration_path %>
            <h5>Facilities</h5>
            <p class="subtext">Yoopy provides you with the smoothest scheduling service in the healthcare industry. Yoopy does this by letting you pick your favorite talent, your desired budget, and your best incentives.</p>

          <% end %>
        </div>

        <div class="col s4">
          <%= scroll_reveal(animation: "enter left, after 0.35s" ) do %>
            <%= link_to image_tag('heart.png', :size => "150x150"), new_friend_registration_path %>
            <h5>Friends</h5>
            <p class="subtext">Yoopy provides you with more personalized in-person-in-home service than any other service in the industry. Yoopy does this by letting you decide the price, who comes to your home, & more.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'footer' %>
  </div>
</div>

<!-- TABLET & MOBILE VIEW -->
<div class="hide-on-large-only">
  <%= render 'mobile' %>
</div>
