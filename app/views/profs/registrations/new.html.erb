<div class="hide-on-med-and-down">
  <div class="prof-signup-wrapper">
    <div class="container">
      <div class="row">
        <div class="col s7">
          <h2 class="signup-text" id="signup-headline">Become a Yoopy Medical Professional</h2>
          <h5 class="signup-text">Enter your information to get started.</h5>
        </div>

        <div class="col s5" id="form-background">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%#= f.label :name %>
              <%= f.text_field :name, placeholder: 'Your Name' %>
            </div>

            <div class="form-group">
              <%#= f.label :license_num %>
              <%= f.text_field :license_num, placeholder: 'License Number' %>
            </div>

            <div class="form-group">
              <%#= f.label :job_title %>
              <%= f.text_field :job_title, placeholder: 'Job Title' %>
            </div>

            <div class="form-group">
              <%#= f.label :phone %>
              <%= f.text_field :phone, placeholder: 'Phone Number' %>
            </div>
            <div class="form-group">
              <%#= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email Address' %>
            </div>

            <div class="form-group">
              <%#= f.label :password %>

              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>

            <div class="form-group">
              <%#= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
            </div>


            <div class="actions">
              <div class="row">
                <div class="col s6" id="signup">
                  <%= f.submit "Sign up", class:"yoopy-button btn green-button", style: 'height: 50px'%>
                </div>

                <div class="col s6" id="linkedin">
                  <%- if devise_mapping.omniauthable? %>
                    <%- resource_class.omniauth_providers.each do |provider| %>
                      <%= link_to image_tag("linkedIn_button.png", height: '50'), omniauth_authorize_path(resource_name, provider) %>
                    <% end -%>
                  <% end %>                  
                </div>
              </div>
            </div>
          <% end %>

          <p>Already a Yoopy Professional?</p>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="hide-on-large-only">
  <%= render 'mobile' %>
</div>
