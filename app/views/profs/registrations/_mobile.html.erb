<div class="prof-signup-wrapper">
  <div class="container">
    <h3 class="signup-text">Become a Yoopy Medical Professional</h3>
    <h5 class="signup-text">Enter your information to get started.</h5>

    <div id="form-background">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%#= f.label :name %>
          <%= f.text_field :name, placeholder: 'Your Name' %>
        </div>

        <div class="form-group">
          <%#= f.label :license_num %>
          <%= f.text_field :license_num, placeholder: 'License Number' %>
        </div>

        <div class="form-group">
          <%#= f.label :job_title %>
          <%= f.text_field :job_title, placeholder: 'Job Title' %>
        </div>

        <div class="form-group">
          <%#= f.label :phone %>
          <%= f.text_field :phone, placeholder: 'Phone Number' %>
        </div>
        <div class="form-group">
          <%#= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email Address' %>
        </div>

        <div class="form-group">
          <%#= f.label :password %>

          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%#= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
        </div>

        <div class="actions">
          <div class="row">
              <%= f.submit "Sign up", class:"yoopy-button btn #1de9b6 teal accent-3", style: 'height: 50px; width: 207px; margin-bottom: 1rem;'%> <br>
                  <%= link_to image_tag("linkedIn_button.png", height: '50', ), prof_linkedin_omniauth_authorize_path %>
            </div>
          </div>
      <% end %>

      <p>Already a Yoopy Professional?</p>
      <%= render "profs/shared/links" %>
    </div>
  </div>
</div>
