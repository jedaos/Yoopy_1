
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :job_title %><br />
    <%= f.text_field :job_title, autocomplete: "off"%>
  </div>

  <div class="field">
    <%= f.label 'Add your bio' %><br />
    <%= f.text_area :bio, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label 'Add or update your phone number' %><br />
    <%= f.text_field :phone, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(We need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn #42a5f5 blue lighten-1" %>
  </div>
<% end %>
