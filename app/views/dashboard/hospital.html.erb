                    data-amount="<%= job.amount_with_commision * 100 %>"
                    data-locale="auto">

                  </script>


                  <% end %> -->
             </li>
            <% end %>
      </ul>
      </div>
      <% end %>
      <% end %>


    </div> <!-- End Dash Content Div-->
  </div> <!-- End of Row Div -->


