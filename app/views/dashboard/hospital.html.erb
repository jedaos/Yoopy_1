<div class="main">
  <div class="sidebar-stuff">
    <%= render 'hospital_sidebar' %>
    <div class="modal_back">
      <div id='modal_hospital' class=""></div>
    </div>
</div>
<div class="F_dash">
  <div class="favorite_wrap">
    <div class="favorites">
      <h5>Favorites</h5>
      <ul>
       <% if current_hospital.favorites.count > 0 %>
        <% current_hospital.favorites.each do |fav| %>
        <li> <%= Prof.find(fav.profs_id).name %> </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="messages">
    <% flash.each do |key, value| %>
      <% unless key == "notice"%>
    <p>  <%= "#{key.capitalize}! #{value}" %>  </p>
    <% end %>
  <% end %>
  </div>
  <div class="dash_right">
        <div class="all_jobs_wrap">
          <% current_hospital.jobs.each do |job| %>
          <div class="job_wrap">
            <div class="job_header">
              <div class="title">
                <small>Title:</small>
                <h6><%= job.name.capitalize %></h6>
              </div>
              <hr>
              <div class="rate">
                <small>Rate:</small>
                <h6>$<%= job.rate %>0</h6>
              </div>
            </div>
            <div class="job_content">
              <div class="edit-icon">
                <a href="/jobs/<%= job.id %>/edit" data-remote="true" onclick="openFriendJobEdit()"><i class="material-icons mode_edit">mode_edit</i></a>
                <a href="/jobs/<%= job.id %>" data-method="DELETE" data-confirm="Are you sure you want to delete this job?"><i class="material-icons">close</i></a>
              </div>
              <div class="job_des">
                <small>Description</small>
                <h6>  <%= job.description %>  </h6>
              </div>
              <hr>
              <div class="job_slots">
                <small> Available Slots: </small>
                <ul>
                  <% job.slots.each do |slot| %>
                    <% if slot.available %>
                  <li class="slot-icon"> <i class="material-icons">contacts</i></li>
                    <% else %>
                  <li class="slot-icon"><a href="/dashboard/<%= slot.booking.prof_id %>/prof_show?job=<%= slot.reservable.id %>&type=job&booking_id=<%= slot.booking.id %>" onclick="openProfModal()" id="prof-show-trigger" data-remote="true"><i class="material-icons not-available">check_circle</i></a></li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>

    </div>
</div>
<div class="modal_prof_back">
    <div class="modal_content_friend">

    </div>
</div>
<div class="modal_edit_back">
  <div class="modal_edit_job">

  </div>
</div>
