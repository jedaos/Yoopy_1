<div class="edit_job_back">
  <%= form_with model: @friendjob, id: "edit_friendJob", remote: true do |f| %>
  <div class="edit_friendJob_close">
    <i class="material-icons friend_job_close" onclick="friendJobEditClose()">close</i>
  </div>
  <%= f.hidden_field :friend_id, :value=>current_friend.id %>
    <div class="form-group">
      <%= f.label 'Job Name' %>
      <%= f.text_field :name %>
      <br>
    </div>
    <div class="form-group">
      <%= f.label 'What type of medical professional do you need?' %>
      <%= f.text_field :description %>
      <br>
    </div>

    <div class="form-group">
      <div class="range">
        <%= f.label "Rate: " %>
        <%= f.select(:rate, options_for_select([['$1', 1 ], ['$100', 100], ['$200', 200], ['$300', 300]])) %>
        <br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'How many medical professionals do you need?' %>
      <%= f.text_field :slot_num %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", id: 'submit_job', class:'btn #bdbdbd grey lighten-1' %>
    </div>
    <% end %>
</div>
